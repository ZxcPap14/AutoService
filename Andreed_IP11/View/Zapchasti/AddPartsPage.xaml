<Page x:Class="Andreed_IP11.View.Zapchasti.AddPartsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreed_IP11.View.Zapchasti"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPartsPage">

    <Grid>
        <StackPanel Margin="60">
            <!-- Метки и поля ввода -->
            <StackPanel Margin="50,0,50,10" >
                <TextBlock Text="Наименование:" Margin="0,0,0,5" />
                <TextBox x:Name="NameTextBox" />
            </StackPanel>

            <StackPanel Margin="50,0,50,10">
                <TextBlock Text="Цена:" Margin="0,0,0,5" />
                <TextBox x:Name="PriceTextBox" />
            </StackPanel>

            <StackPanel Margin="50,0,50,10">
                <TextBlock Text="Количество:" Margin="0,0,0,5" />
                <TextBox x:Name="QuantityTextBox" />
            </StackPanel>

            <StackPanel Margin="50,0,50,10">
                <TextBlock Text="Поставщик:" Margin="0,0,0,5" />
                <TextBox x:Name="SupplierTextBox" />
            </StackPanel>

            <!-- Кнопка сохранения -->
            <Button Content="Сохранить" Click="SaveButton_Click" Width="120"/>
        </StackPanel>
    </Grid>
</Page>
